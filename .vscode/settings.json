{
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/*cache*/**": true
    },
    "python.testing.pytestArgs": [
        "test/t1",
        "--doctest-modules",
        "--junitxml=junit/test-results.xml",
        "--cov=test",
        "--cov-report=xml",
        "-s"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
}